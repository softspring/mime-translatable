{
    "name": "softspring/mime-translatable",
    "description": "This library extends symfony mime component providing a translatable email",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": false,
    "require": {
        "php": ">=8.1",
        "symfony/mime": "^5.4|^6.0|^7.0",
        "symfony/translation": "^5.4|^6.0|^7.0",
        "symfony/twig-bridge": "^5.4|^6.0|^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.14",
        "phpstan/phpstan": "^1.9"
    },
    "suggest": {
        "sofspring/mailer-bundle": "Manage and extends application mails in admin",
        "twig/cssinliner-extra": "Use css inliner",
        "twig/inky-extra": "Use Inky mailing templates"
    },
    "autoload": {
        "psr-4": {
            "Softspring\\Component\\MimeTranslatable\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
